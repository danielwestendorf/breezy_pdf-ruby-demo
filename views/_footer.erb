<% content_for :footer_template do %>
  <style type="text/css">
    #footer {
      font-size: 12px;
      font-weight: 400;
      line-height: 1.5;
      color: #212529;
      font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";
      width: 100%;
      align-items: flex-end;
      padding-bottom: 0.4cm;
      color: lightgrey;
    }

    .left {
      flex: none;
      padding-left: 0.7cm;
      padding-right: 0.1cm;
    }

    .center {
      flex: auto;
      padding-left: 0.7cm;
      padding-right: 0.7cm;
      text-align: center;
    }

    .right {
      flex: none;
      padding-left: 0.1cm;
      padding-right: 0.7cm;
    }

    .grow {
      flex: auto;
    }

    .text {
      font-size: 8px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  </style>
  <div id="footer">
    <div class="left text">
      <span class="date"></span>
    </div>
    <div class="text center grow">
      Generated by BreezyPDF
    </div>
    <div class="right text">
       Page <span class="pageNumber"></span> of <span class="totalPages"></span>
    </div>
  </div>
<% end %>
