<% content_for :header_template do %>
  <style type="text/css">
    #header {
      font-size: 12px;
      font-weight: 400;
      line-height: 1.5;
      color: #212529;
      font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";
      width: 100%;
      align-items: flex-start;
      padding-top: 0.4cm;
      color: lightgrey;
    }

    .left {
      flex: none;
      padding-left: 0.7cm;
      padding-right: 0.1cm;
    }

    .center {
      flex: auto;
      padding-left: 0.7cm;
      padding-right: 0.7cm;
      text-align: center;
    }

    .right {
      flex: none;
      padding-left: 0.1cm;
      padding-right: 0.7cm;
    }

    .grow {
      flex: auto;
    }

    .text {
      font-size: 8px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .text a {
      color: lightgrey;
      font-weight: bold;
    }
  </style>
  <div id="header">
    <div class="left text"></div>
    <div class="text center grow">
      Generated with ❤️ for <%= request.ip %> by <a href="https://breezypdf.com">BreezyPDF</a>
    </div>
    <div class="right text"></div>
  </div>
<% end %>
